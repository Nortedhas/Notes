<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg"
>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <EditText
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:maxLines="2"
                android:id="@+id/noteActivityName"
                android:textStyle="bold"
                android:hint="Enter Name..."
                android:fontFamily="sans-serif-condensed"
                android:textSize="@dimen/nameSize"
                android:layout_margin="@dimen/marginName"
                android:textColor="@color/textColor"
        />
        <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"

                android:gravity="right"
                android:fontFamily="sans-serif-condensed"
                android:textSize="18dp"
                android:layout_marginRight="@dimen/marginName"
                android:id="@+id/noteActivityDate"
        />
    </LinearLayout>

    <EditText
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/noteActivityText"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:autoLink="all"
            android:hint="@string/edit_text_hint"
            android:lines="100"
            android:minLines="1"
            android:gravity="top|left"
            android:maxLines="10"
            android:inputType="textMultiLine|textCapSentences"
            android:textColor="@color/textColor"
    />
</LinearLayout>